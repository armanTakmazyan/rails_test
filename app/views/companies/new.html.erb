<div class="container">
    <div class="row">
        <div class="col-offset-md-2 col-md-5">
            <%= form_for @company, html: { multipart: true } do |f| %>
                <%= render "shared/errors", object: @company %>
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, :autofocus => true, :class => "form-control", 'aria-describedby' => "nameHelp", :placeholder => "Enter Name" %>
                    <small id="nameHelp" class="form-text text-muted">Required field</small>
                </div>
                <div class="form-group">
                    <%= f.label :email %>
                    <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
                </div>
                <div class="form-group">
                    <%= f.label :website %>
                    <%= f.text_field :website, :class => "form-control", :placeholder => "Website" %>
                </div>
                <div class="custom-file">
                    <%= f.label :logo %>
                    <%= f.file_field :logo %>
                </div>
                <hr>
                <%= f.submit "Save", class: "btn btn-primary" %>
                <%= link_to "Back To Companies", companies_path, class: 'btn btn-secondary' %>
            <% end %>    
        </div>        
    </div>
</div>